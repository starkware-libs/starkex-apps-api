{
  "openrpc": "1.0.0-rc1",
  "info": {
    "version": "0.1.0",
    "title": "StarkEx Perpetual WalletConnect JSON RPC",
    "license": {}
  },
  "methods": [
    {
      "name": "starkex_signTransaction",
      "params": [
        {
          "name": "system_id",
          "required": true,
          "schema": {
            "type": "string"
          }
        },
        {
          "name": "starkex_transaction",
          "required": true,
          "oneOf": [
            {
              "$ref": "#/components/transactions/Transfer"
            }
          ]
        }
      ],
      "result": {
        "name": "signature",
        "schema": {
          "$ref": "#/components/properties/signature"
        }
      }
    }
  ],
  "components": {
    "transactions": {
      "ConditionalTransfer": {
        "type": "object",
        "properties": {
          "type": 5,
          "asset_id": {
            "$ref": "#/components/properties/asset_id"
          },
          "asset_id_fee": {
            "$ref": "#/components/properties/asset_id"
          },
          "receiver_public_key": {
            "$ref": "#/components/properties/public_key"
          },
          "condition": {
            "$ref": "#/components/properties/condition"
          },
          "sender_position_id": {
            "$ref": "#/components/properties/position_id"
          },
          "receiver_position_id": {
            "$ref": "#/components/properties/position_id"
          },
          "src_fee_position_id": {
            "$ref": "#/components/properties/position_id"
          },
          "amount": {
            "$ref": "#/components/properties/amount"
          },
          "max_amount_fee": {
            "$ref": "#/components/properties/amount"
          },
          "nonce": {
            "$ref": "#/components/properties/nonce"
          },
          "expiration_timestamp": {
            "$ref": "#/components/properties/expiration_timestamp"
          }
        }
      },
      "Transfer": {
        "type": "object",
        "properties": {
          "type": 4,
          "asset_id": {
            "$ref": "#/components/properties/asset_id"
          },
          "asset_id_fee": {
            "$ref": "#/components/properties/asset_id"
          },
          "receiver_public_key": {
            "$ref": "#/components/properties/public_key"
          },
          "sender_position_id": {
            "$ref": "#/components/properties/position_id"
          },
          "receiver_position_id": {
            "$ref": "#/components/properties/position_id"
          },
          "src_fee_position_id": {
            "$ref": "#/components/properties/position_id"
          },
          "amount": {
            "$ref": "#/components/properties/amount"
          },
          "max_amount_fee": {
            "$ref": "#/components/properties/amount"
          },
          "nonce": {
            "$ref": "#/components/properties/nonce"
          },
          "expiration_timestamp": {
            "$ref": "#/components/properties/expiration_timestamp"
          }
        }
      }
    },
    "properties": {
      "condition": {
        "$ref": "#/components/types/string_felt"
      },
      "position_id": {
        "$ref": "#/components/types/string_decimal_64"
      },
      "nonce": {
        "$ref": "#/components/types/string_decimal_32"
      },
      "expiration_timestamp": {
        "$ref": "#/components/types/string_decimal_32"
      },
      "amount": {
        "$ref": "#/components/types/string_decimal_64"
      },
      "signature": {
        "type": "object",
        "properties": {
          "r": {
            "$ref": "#/components/types/string_felt"
          },
          "s": {
            "$ref": "#/components/types/string_felt"
          }
        }
      },
      "asset_id": {
        "$ref": "#/components/types/string_felt"
      },
      "public_key": {
        "$ref": "#/components/types/string_felt"
      }
    },
    "types": {
      "string_decimal_32": {
        "type": "string",
        "pattern": "^[0-9]{1,10}$",
        "bigNumber": {
          "encoding": "decimal",
          "max": "0xffffffff"
        }
      },
      "string_decimal_64": {
        "type": "string",
        "pattern": "^[0-9]{1,20}$",
        "bigNumber": {
          "encoding": "decimal",
          "max": "0xffffffffffffffff"
        }
      },
      "string_felt": {
        "type": "string",
        "pattern": "^0x[0-9a-fA-F]{1,63}$",
        "bigNumber": {
          "encoding": "hex",
          "max": "0x800000000000011000000000000000000000000000000000000000000000001"
        }
      }
    }
  }
}